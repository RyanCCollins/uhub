extends ../../layouts/default

block content

	.section
		.container
			form(method='project', enctype='multipart/form-data', autocomplete='off', novalidate).form-horizontal.create-form.profile-form
				input(type='hidden', name='action', value='create-project')
				
				.row: .col-sm-8.col-sm-offset-2
					
					//- Title
					.form-group
						h1 Share your capstone project
						input(type='text', id='project-title', name='title', placeholder='Project title').input.input-xl.input-faded
					
					.form-group
						label Brief Description of your Project
						textarea(type='text', id='project-description', name='description',  placeholder='Brief Description', note='Enter a brief description of your project to be included in the project gallery').input.input-faded
					
					//- Image
					.form-group
						label Upload Feature Image
						input(type='file', name='image_upload')
					
					//- Link
					.form-group
						label Upload Project 
						input(type='file' name='file_upload')
						
					
					.form-group
						label Project Category
						input(type='radio-inline' name='category')
					
					//- Content
					.form-group
						label Share a bit about your project (in markdown)
						textarea(name='about', id='project-about' class='wysiwyg').input.input-faded
					
					
					//- Submit
					.form-group
						button(type='submit', data-loading-text="Changing...").btn.btn-lg.btn-primary.btn-block Upload project
						
block js
	script(src='/js/lib/bootstrap/button.js')
	script(src='/js/lib/tinymce/tinymce.min.js')
	script(src='/js/lib/tinymce/jquery.tinymce.min.js')
	script.
		jQuery(function($) {
			$( "#project-about" ).focus();
			tinymce.init({
				selector: 'textarea.wysiwyg',
				menubar: false,
				height: 400,
				plugins: [ 'code', 'link' ],
				toolbar: 'bold italic | alignleft aligncenter alignright | bullist numlist | outdent indent | link | code',
				skin: 'keystone'
			});
		});