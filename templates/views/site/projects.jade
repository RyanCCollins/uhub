extends ../../layouts/default

include ../../mixins/project

block intro
	.page-intro: .container
		h1.page-title=data.category ? data.category.name : 'Project Gallery'
		p.lead
			| Welcome to the project gallery!  Here are some recent projects posted to uHub by our members.&nbsp;
			a(href='/join').js-auth-trigger Join now
			| &nbsp;to submit your projects.

block content
	.page-content: .container
		.row
			.project-cards.row(itemscope itemtype="http://schema.org/Blog")
				each project in data.projects
					+project(project)
			if data.categories.length
				.col-md-2
					if data.categories.length
						h5.text-muted Filter by categorey
						ul.list-unstyled.tags-list
							li: a(href='/projects', class=!data.categories ? 'active' : false) All
							each tag in data.categories
								li: a(href='/projects/' + tag.key, class=data.category && data.category.id == tag.id ? 'active' : false).list-group-item= tag.name