
mixin pagination(projects)
	if projects.totalPages > 1
		ul.pagination
			if projects.previous
				li: a(href='?page=' + projects.previous): span.entypo.entypo-chevron-thin-left
			else
				li.disabled: a(href='?page=' + 1): span.entypo.entypo-chevron-thin-left
			each p, i in projects.pages
				li(class=projects.currentPage == p ? 'active' : null)
					a(href='?page=' + (p == '...' ? (i ? projects.totalPages : 1) : p ))= p
			if projects.next
				li: a(href='?page=' + projects.next): span.entypo.entypo-chevron-thin-right
			else
				li.disabled: a(href='?page=' + projects.totalPages): span.entypo.entypo-chevron-thin-right